[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    frontend/node_modules,
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    .env
per-file-ignores =
    # Ignore line length for database migration files
    database/*.py:E501
    # Ignore import order for migration files
    database/*.py:E402 